<script>    
  function load() 
    {     alert("loaded"); 
    }     
  function resize() 
    {     alert("page resized"); 
    }     
  function submit() 
    {     alert("triggered by onclick"); 
    }     
  function mouseover() 
    {     document.body.style.background="orange"; 
    }  
  function mouseout() 
    { 
    document.body.style.background="pink"; 
    }     
  function reset() 
    { 
    alert("This form was reset"); 
    } 
 
</script> 
<style> 
  #button{     background-color: rgb(128, 212, 128);  
}  
 
</style>  
